<%= form_with model: @user, data: {turbo: false} do |form| %>
    <p><%= form.label :name, 'Имя' %></p>
    <p><%= form.text_field :name, class: 'form-text-area' %></p>
    <p><%= form.label :nickname, 'Никнейм' %></p>
    <p><%= form.text_field :nickname, class: 'form-text-area' %></p>
    <p><%= form.label :email, 'Email' %></p>
    <p><%= form.text_field :email, class: 'form-text-area' %></p>
    <p><%= form.label :password, 'Пароль' %></p>
    <p><%= form.password_field :password, class: 'form-text-area' %></p>
    <p><%= form.label :password_confirmation, 'Повтор пароля' %></p>
    <p><%= form.password_field :password_confirmation, class: 'form-text-area' %></p>
    <p class='mt'><%= form.submit 'Зарегистрироваться', class: 'button button-main' %></p>
  <% end %>
