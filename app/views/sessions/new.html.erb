<div class='container'>
  <h2 class='title-lg'>Вход</h2>
  <p class='mt'>Введите email и пароль</p>
  <div class='mt'>
    <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form|  %>
      <p><%= form.label :email, 'email' %></p>
      <p><%= form.text_field :email, class: 'form-text-field' %></p>

      <p class='mt'><%= form.label :password, 'password' %></p>
      <p><%= form.password_field :password, class: 'form-text-field' %></p>

      <p class='mt'><%= form.submit 'Войти', class: 'button button-main' %></p>
    <% end %>
  </div>
</div>
